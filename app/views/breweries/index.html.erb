<p id="notice"><%= notice %></p>

<h1>Breweries</h1>

<% if @current_user && current_user.admin? %>
<div>
  <%= link_to 'Create New Brewery', new_admin_brewery_path, class: "btn btn-outline-dark" %>
</div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.name %></td>
        <td><%= brewery.location %></td>
        <td><%= link_to 'Show', brewery %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

