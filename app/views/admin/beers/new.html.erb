<h1>New Beer</h1>

<%= render 'form', beer: @beer %>

<%= link_to 'Back', beers_path, class: "btn btn-outline-dark" %>
<div class="col-md-4 order-md-2 mb-4">
<table class="table">
  <thead>
    <tr>
      <th scope="col">Brewery ID</th>
      <th scope="col">Name</th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.id %></td>
        <td><%= brewery.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>