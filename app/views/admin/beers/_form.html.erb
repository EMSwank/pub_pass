<%= form_for [:admin, @beer] do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :style %>
    <%= form.text_field :style %>
  </div>

  <div>
    <%= form.select(:brewery_id, @breweries) %>
  </div>

  <div class="btn">
    <%= form.submit %>
  </div>
<% end %>