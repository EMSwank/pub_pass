<h1>Beers</h1>

<% if @current_user && @current_user.admin? %>
<div>
  <%= link_to 'Create New Beer', new_admin_beer_path, class: "btn btn-outline-dark" %>
</div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.style %></td>
      <% if @current_user %>
        <td><%= link_to 'Show', beer, class: "btn btn-outline-success" %></td>
      <% end %>
      <% if @current_user && @current_user.admin? %>
        <td><%= link_to 'Edit', edit_admin_beer_path(beer) %></td>
        <td><%= link_to 'Delete', beer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

